# Database
DATABASE_URL=postgresql://user:password@localhost:5432/facesenseattend

# Security (Generate dengan: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# Gunakan 64 karakter hex untuk SESSION/JWT, 32 karakter untuk ENCRYPTION_KEY
SESSION_SECRET=your-64-char-hex-secret-here
JWT_SECRET=your-64-char-hex-secret-here
ENCRYPTION_KEY=your-32-char-hex-key-here

# Server
NODE_ENV=development
PORT=5000

# CORS
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5173

# SSL (Production)
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private-key.pem

# Cookies
SESSION_COOKIE_DOMAIN=yourdomain.com

# Logging
LOG_DIR=logs
LOG_LEVEL=info